  {
    "type": "function",
    "function": {
      "name": "med-update_user_profile",
      "description": "Update the user's profile. Only the fields provided in the request will be modified; all other fields remain unchanged.",
      "parameters": {
        "type": "object",
        "properties": {
          "basic_info": {
            "type": "object",
            "description": "Basic information; any field not provided will not be modified.",
            "properties": {
              "name": {
                "type": "string"
              },
              "age": {
                "type": "integer",
                "minimum": 0
              },
              "gender": {
                "type": "string"
              }
            }
          },
          "health_risks": {
            "type": "array",
            "description": "Chronic disease or risk labels. If provided, this array fully replaces the existing health_risks.",
            "items": {
              "type": "string"
            }
          },
          "dietary_restrictions": {
            "type": "array",
            "description": "Dietary restrictions. If provided, this array fully replaces the existing dietary_restrictions.",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
